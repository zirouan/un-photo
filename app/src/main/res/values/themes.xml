<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.DarkLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Toolbar e AppBar -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item> <!-- Text and Icons -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item> <!-- Buttons -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item> <!-- Text and Icons Buttons -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <!-- Error color. -->
        <item name="colorError">@color/colorSurface</item>
        <item name="colorOnError">@color/colorSurface</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/colorSurface</item> <!-- Cards -->
        <item name="colorOnSurface">@color/colorOnSurface</item> <!-- Content Cards -->

        <!-- Background color. -->
        <item name="backgroundColor">@android:color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorPrimarySurface">@color/colorTextPrimary</item>
        <item name="colorOnPrimarySurface">@android:color/white</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>